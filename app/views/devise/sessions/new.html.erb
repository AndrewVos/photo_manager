<div class="container">
  <div clas="row">
    <div class="col-xs-12">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), layout: :basic) do |f| %>
        <%= f.email_field :email, autofocus: true %>
        <%= f.password_field :password, autocomplete: "off" %>
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me, checked: true %>
        <% end -%>
        <%= f.submit "Log in" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
