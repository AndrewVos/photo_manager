<div class="container">
  <div clas="row">
    <div class="col-xs-12">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), layout: :basic, html: { method: :post }) do |f| %>
        <%= f.email_field :email, autofocus: true %>
        <%= f.submit "Send me reset password instructions" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
